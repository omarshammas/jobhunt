%br
= form_tag companies_path, method: :get, class: 'search-form' do
  = text_field_tag :search, params[:search]
  = submit_tag 'Search', class: 'btn btn-sm btn-default'

%h1= "#{@companies.count} Companies"

- if current_user.try(:admin?)
  = link_to 'New Company', new_company_path, class: 'btn btn-primary'
  %br

= will_paginate @companies
= render partial: 'table', locals: { companies: @companies } if @companies.any?
= will_paginate @companies
