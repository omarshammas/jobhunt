
%h1= @company.name
%p
  %b Homepage url:
  = link_to @company.homepage_url, @company.homepage_url unless @company.homepage_url.blank?
%p
  %b Short description:
  = @company.short_description
%p
  %b Description:
  = @company.description
%p
  %b Founded on:
  = @company.founded_on
%p
  %b Headquarters:
  = @company.headquarters

%br
%h3 Funding Rounds
%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Date
      %th Money Raised (USD)
      %th Funding Type
      %th Series
      %th{colspan: 3} Actions
  %tbody
    - @company.funding_rounds.each do |funding_round|
      %tr{id: get_html_id(funding_round)}
        %td= funding_round.announced_on.to_s(:simple_date)
        %td= number_to_currency(funding_round.money_raised_usd, precision: 0) if funding_round.money_raised_usd
        %td= funding_round.funding_type
        %td= funding_round.series
        %td= link_to 'Show', funding_round
        %td= link_to 'Edit', edit_funding_round_path(funding_round)
        %td= link_to 'Destroy', funding_round, method: :delete, data: { confirm: 'Are you sure?' }

%br
= link_to 'Edit', edit_company_path(@company), class: 'btn btn-default'
= link_to 'Back', companies_path, class: 'btn btn-default'
